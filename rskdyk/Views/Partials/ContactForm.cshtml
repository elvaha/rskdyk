@model rskdyk.Models.ContactFormModelView

@using (Html.BeginUmbracoForm("HandleFormSubmit", "ContactFormSurface", new Object { }, new { @class = "form-horizontal" }))
{
    <div class="form-group">
        @Html.LabelFor(x => x.Name, new { @class = "control-label col-sm-2" })
        <div class="col-sm-6">
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = "Name" })
            @Html.ValidationMessageFor(x => x.Name)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Subject, new { @class = "control-label col-sm-2" })
        <div class="col-sm-6">
            @Html.TextBoxFor(x => x.Subject, new { @class = "form-control", placeholder = "Subject" })
            @Html.ValidationMessageFor(x => x.Subject)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Email, new { @class = "control-label col-sm-2" })
        <div class="col-sm-6">
            @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "Email" })
            @Html.ValidationMessageFor(x => x.Email)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Messsage, new { @class = "control-label col-sm-2" })
        <div class="col-sm-6">
            @Html.TextAreaFor(x => x.Messsage, new { @class = "form-control", placeholder = "Message" })
            @Html.ValidationMessageFor(x => x.Messsage)
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-2"></div>
        <div class="col-sm-6">
            <input type="submit" value="Send" class="btn btn-default" />
        </div>
    </div>
}
